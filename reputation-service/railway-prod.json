{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./gradlew :reputation-service:build",
    "watchPatterns": [
      "/reputation-service/**"
    ]
  },
  "deploy": {
    "startCommand": "java -Xmx1g -XX:+UseShenandoahGC -Dserver.port=$PORT -Dspring.profiles.active=prod -jar reputation-service/build/libs/reputation-service-2024.1.jar",
    "runtime": "V2",
    "numReplicas": 0,
    "sleepApplication": true,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
