{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./gradlew :auth-service:build",
    "watchPatterns": [
      "/auth-service/**"
    ]
  },
  "deploy": {
    "startCommand": "java -Xmx1g -XX:+UseShenandoahGC -Dserver.port=$PORT -Dspring.profiles.active=stage -jar auth-service/build/libs/auth-service-2024.1.jar",
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": true,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}